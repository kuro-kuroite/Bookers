<% provide(:button_text, 'Create book') %>
<h1>All Books</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col" colspan="2">Comment</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.comment %></td>
        <td>
          <%= link_to 'Show', book_path(book) %>
          <%= link_to 'Edit', edit_book_path(book) %>
          <%= link_to 'Destroy', book_path(book), method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= render 'form', book: @book  %>
  </div>
</div>

